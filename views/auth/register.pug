extends ../layout/index

block contenido 
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal  Raices
        h2.text-center.text-2xl.font-extrabold=pagina
        
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST", action="/auth/register" noValidate)
                    input(type='hidden' name='_csrf' value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="name") Tu Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray400.rounded-md.placeholder-gray-400(placeholder="Your Name", type="text", name="name" value= usuario ? usuario.nombre : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
                        input#Email.w-full.px-3.py-2.border.border-gray400.rounded-md.placeholder-gray-400(placeholder="Your Email", type="text", name="email" value= usuario ? usuario.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                        input#pass.w-full.px-3.py-2.border.border-gray400.rounded-md.placeholder-gray-400(placeholder="Your Password", type="password", name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repeatPass") Repeat Your Password
                        input#repeatPass.w-full.px-3.py-2.border.border-gray400.rounded-md.placeholder-gray-400(placeholder="Repeat Password", type="password", name="repeatPass")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya Tienes cuenta? Inicia Sesion
                        a.text-gray-500.text-xs(href="/auth/forgot-pass") Olvide mi contraseña
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 rounded-md" type="submit" value="Crear Cuenta")
